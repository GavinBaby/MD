<div id="account_manage_page">
    <!--start-->
    <div style="float: left;width: 98%;min-height: 700px;margin: 20px 0px 0px 20px ">
        <div style="width: 100%;height: 74px;background: #f3f3f3;border: 1px solid #e4e4e4;line-height: 74px">
            <div style="float: left;font-size: 14px;color: #666666;padding-left: 14px">帐号</div>
            <div style="float: left;margin-left:16px;"><input name="account_id_q" id="account_id_q" style="width: 92px;height: 30px;border: 1px solid #dbe0e4"></div>
            <div style="float: left;font-size: 14px;color: #666666;padding-left: 14px">姓名</div>
            <div style="float: left;margin-left:16px;"><input name="name_q" id="name_q" style="width: 130px;height: 30px;border: 1px solid #dbe0e4"></div>
            <div style="float: left;font-size: 14px;color: #666666;padding-left: 14px">角色</div>
            <div style="float: left;margin-left:16px;">
                <select id="part_q" name="part_q" style="width: 70px;height: 30px;border: 1px solid #dbe0e4">
                    <option value="">全部</option>
                </select>
            </div>
            <div style="float: left;font-size: 14px;color: #666666;padding-left: 14px">状态</div>
            <div style="float: left;margin-left:16px;">
                <select id="status_q" name="status_q" style="width: 70px;height: 30px;border: 1px solid #dbe0e4">
                    <option value="">请选择</option>
                    <option value="1">正常</option>
                    <option value="2">删除</option>
                </select>
            </div>
            <div id="employeeSeatchBut" style="float: right;width: 77px;height: 30px;background: url(../images/sousuo.png);margin: 22px 18px 0px 0px;font-size: 15px;color: white;line-height: 30px;text-align: center">搜索</div>
        </div>
        <div style="width: 100%;min-height: 560px;border: 1px solid #e4e4e4;margin-top: 12px;padding: 10px 0px 0px 10px">
            <table class="table-style-1 table-style-1-a table-hover mb-0-5" id="account_Table">
                <thead>
                <tr class="sch">
                    <td style="width: 20%;" align="center">
                        <div class="t">帐号<span class="sort-ico" style="padding-right:90px;padding-top:10px;"><i class=" dot-top icon-caret-up"></i><i class="dot-bottom icon-caret-down"></i></span></div>
                    </td>
                    <td style="width: 20%;" align="center">
                        <div class="t text-left" >姓名
                            <span class="sort-ico" style="padding-right:90px;padding-top:10px;"><i class="dot-top icon-caret-up"></i><i class="dot-bottom icon-caret-down"></i></span>
                        </div>
                    </td>
                    <td style="width: 20%;" align="center">
                        <div class="t">角色<span class="sort-ico" style="padding-right:90px;padding-top:10px;"><i class="dot-top icon-caret-up"></i><i class="dot-bottom icon-caret-down"></i></span></div>
                    </td>
                    <td style="width: 20%;" align="center">
                        <div class="t">状态<span class="sort-ico" style="padding-right:90px;padding-top:10px;"><i class="dot-top icon-caret-up"></i><i class="dot-bottom icon-caret-down"></i></span></div>
                    </td>
                    <td style="width: 20%;" align="center">
                        <div class="t">操作</div>
                    </td>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
            <nav class="pagination-wrap clearfix">
                <div class="ml-2 mt-1 mb-2">
                    <a class="form-btn-upload" id="addStaffModal" data-toggle="modal"><i class="icon-plus-sign"></i>添加新用户</a>
                </div>
            </nav>
        </div>
    </div>
    <!-- 添加账户弹出框 -->
    <div class="modal modal-noline fade" id="addAccountModal" tabindex="-1" role="dialog" aria-labelledby="addAccountModalLabel" aria-hidden="true">
        <div class="modal-outer">
            <div class="modal-middle">
                <div class="modal-dialog modal-inner w-65 float-none">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"></button>
                        </div>
                        <div class="modal-body p-1 pt-3 pl-5">
                            <form class="form-horizontal" action="" method="post"   id="add_account_form">
                                <input id="seq_no" type="hidden" name="seq_no">
                                <input id="res" name="res" type="reset" style="display:none;" />
                                <div class="form-group ">
                                    <label class="control-label w-9">用户编号：</label>
                                    <div class="w-40 relative">
                                        <input id="account_id" class="form-control" type="text" name="account_id" maxlength="20" placeholder="系统自动生成" disabled>
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="control-label w-9">用户角色：</label>
                                    <div class="w-40 relative">
                                        <select class="form-control" name="part" id="part" data-rule="角色:required;">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group " style="display: none" id="class_div">
                                    <label class="control-label w-9">用户班级：</label>
                                    <div class="w-40 relative">
                                        <select class="form-control" name="class" id="class" data-rule="班级:required;">
                                        </select>
                                    </div>
                                </div>
                                <!--<tr>
                                    <td align="left" class="style_or" style="padding: 0% 0% 1% 41%;">上传头像:</td>
                                    <td class="msg text-gray-lighter font-12 mt-0-5" >
                                        <div class="w-70 ml-9 float-none clearfix" style="margin: 8px 0px 0 84px;width: 68px">
                                            <ul class="alert-policy-01 pull-left clearfix" id="img_cover_ul">
                                            </ul>
                                            <div class="roompic-upload w-12" >
                                                <textarea style="display:none;" id="img_url" hidden></textarea>
                                                <a id="add_top_img" href="#" class="form-btn-upload"><i class="icon-plus-sign" ></i>添加照片</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>-->
                                <div class="form-group ">
                                    <label class="control-label w-9">用户姓名：</label>
                                    <div class="w-40 relative">
                                        <input id="name" class="form-control" type="text" name="name" data-rule="姓名:required;" placeholder="请输入姓名" maxlength="20">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="control-label w-9">登录账户：</label>
                                    <div class="w-40 relative">
                                        <input id="username" class="form-control" type="text" name="username" data-rule="账户:required;" placeholder="请输入账户" maxlength="20">
                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label class="control-label w-9">用户密码：</label>
                                    <div class="w-40 relative">
                                        <input id="password" class="form-control" type="password" name="password" data-rule="密码:required;" placeholder="请输入密码" minlength="3" maxlength="20">
                                    </div>
                                </div>
                                <div class="modal-footer text-center pb-2">
                                    <button type="button" class="btn btn-default btn-default-green w-14 font-16 float-none" data-dismiss="modal" id="add_account_cancel">取消</button>
                                    <button id="save_account" type="button" class="btn btn-success w-14 font-16 float-none ml-2">保存</button>
                                </div>

                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 弹出删除确认信息 -->
    <div style="width: 30%;margin: 0 auto" class="modal modal-noline fade" id="sureDel" tabindex="-1" role="dialog"
         aria-labelledby="sureDelLabel" aria-hidden="true">
        <div class="modal-middle">
            <div class="modal-dialog-notice modal-inner">
                <div class="modal-content">
                    <div class="background-grey-2 p-1 indent-1 modal-dialog-notice-radius">
                        <span class="font-20 wryh text-zdy-2">信息确认：</span>
                    </div>
                    <div class="p-3">
                        <p class="text-center font-18 wryh text-gray-light">确认要删除该员工信息吗？</p>

                        <div class="modal-footer text-center pb-2">
                            <button type="button" class="btn btn-default btn-default-blue font-16 float-none"
                                    data-dismiss="modal">取消
                            </button>
                            <button type="button" class="btn btn-primary font-16 float-none ml-1" id="confirmDialog"
                                    data-dismiss="modal">确定
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 弹出重置密码确认信息 -->
    <div style="width: 30%;margin: 0 auto" class="modal modal-noline fade" id="sureReset" tabindex="-1" role="dialog"
         aria-labelledby="sureDelLabel" aria-hidden="true">
        <div class="modal-middle">
            <div class="modal-dialog-notice modal-inner">
                <div class="modal-content">
                    <div class="background-grey-2 p-1 indent-1 modal-dialog-notice-radius">
                        <span class="font-20 wryh text-zdy-2">信息提示：</span>
                    </div>
                    <div class="p-3">
                        <p class="text-center font-18 wryh text-gray-light">用户账号添加成功！</p>
                        <div class="modal-footer text-center pb-2">
                            <button type="button" class="btn btn-primary font-16 float-none ml-1" id="resetPassword"
                                    data-dismiss="modal">确定
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
